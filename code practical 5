<script>
    let angle = 0;
    const planets = document.querySelectorAll('.planet-visual');
    const orbits = document.querySelectorAll('.orbit');

    function rotatePlanets() {
        angle += 0.01;
        planets.forEach((planet, index) => {
            const orbit = orbits[index];
            const radius = parseInt(orbit.style.width) / 2;
            const x = Math.cos(angle * (index + 1)) * radius;
            const y = Math.sin(angle * (index + 1)) * radius;

            planet.style.transform = `translate(${x}px, ${y}px)`;
        });
        requestAnimationFrame(rotatePlanets);
    }

    rotatePlanets();
</script>

